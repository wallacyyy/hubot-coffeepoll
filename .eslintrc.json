{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "rules": {
    "import/newline-after-import": 0,
    "comma-dangle": ["error", "never"],
    "import/no-extraneous-dependencies": [
      "error",
       {
         "devDependencies": true,
         "optionalDependencies": false,
         "peerDependencies": false
       }
     ]
  },
  "globals": {
    "context": true,
    "it": true,
    "beforeEach": true,
    "afterEach": true,
    "describe": true
  }
}
